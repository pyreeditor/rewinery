@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"{MudAppBarStyle}")" Fixed="true" Dense="true" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@(() => ToggleDrawer())" />
        <MudSpacer />
        <form class="d-flex w-50">
            <input class="form-control me-2 h-75 justify-content-center m-auto" type="search" placeholder="Search" aria-label="Search">
            <MudIconButton Href="#" Icon="@Icons.Filled.Search" Variant="Variant.Text" Color="Color.Primary" Size="Size.Small" />
        </form>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer Style="@($"{MudDrawerStyle}")" @bind-Open="@open" Anchor="Anchor.Start" Elevation="1" DisableOverlay="true" ClipMode="DrawerClipMode.Always" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Rewinery</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/recipes">Wine recepies</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/create-wine">Create wine</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/topics">Topics</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/swagger">Swagger</MudNavLink>
            <hr style="width: 80%;margin-left: 10%;height: 2px;"/>
            <MudNavLink Match="NavLinkMatch.All" Href="/user-orders">My orders</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/user-recipes">My recipes</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/user-topics">My topics</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    @Body
</MudLayout>

@code {
    bool open;
    public string? Search { get; set; }

    string MudAppBarStyle = "margin: 15px; border-radius: 16px; width: 98%;" +
    "background-color: unset; color: unset;  box-shadow: inset 0 0 500px rgba(255, 255, 255, 0.5), 0 6px 20px rgba(0, 0, 0, 0.4), 0 6px 20px rgba(0, 0, 0, 0.15); backdrop-filter: blur(20px);";
    string MudDrawerStyle = "margin-top: 30px !important; margin-left: 15px !important; padding-top: 30px; height: 88%; width: 210px; border-radius: 16px;" +
    "background-color: unset; color: unset;  box-shadow: inset 0 0 500px rgba(255, 255, 255, 0.5), 0 6px 20px rgba(0, 0, 0, 0.4), 0 6px 20px rgba(0, 0, 0, 0.15); backdrop-filter: blur(20px);";

    void ToggleDrawer()
    {
        open = !open;
    }
}