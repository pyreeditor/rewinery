@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"background:{Colors.BlueGrey.Darken4};")" Fixed="false" Dense="true" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@OpenDrawer" />
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Rewinery</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/counter">Counter</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/fetchdata">Fetch data</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-4 px-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool open;
    Anchor anchor;

    void OpenDrawer()
    {
        open = true;
        anchor = Anchor.Start;
    }
}